#!/bin/sh


if [ $1 = append ]
then
    content=$(xsel -ob | yad --text-info --text="Type something and it will be copyed to clipboard, \"ESC\" to confirm." --no-buttons --escape-ok --editable --wrap --center --width=800 --height=400)
    if [ -z "$content" ]
    then
        exit
    else
        if [ $(echo "$content" | base64) = "$(xsel -ob | base64)" ]
        then
            exit
        else
            echo "$content" | xsel -ib
        fi
    fi
elif [ $1 = write ]
then
    content=$(yad --text-info --text="Type something and it will be copyed to clipboard, \"ESC\" to confirm." --no-buttons --escape-ok --editable --wrap --center --width=800 --height=400)
    if [ -z "$content" ]
    then
        exit
    else
        echo "$content" | xsel -ib
    fi
fi
